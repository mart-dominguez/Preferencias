<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="pref1"
        android:title="@string/pref_preferencia1"
        android:summary="@string/pref_preferencia1_det"
        android:summaryOn=" preferencia prendida"
        android:summaryOff=" preferencia apagada"
        android:defaultValue="false" />
    <SwitchPreference
        android:key="pref2"
        android:title="@string/pref_preferencia2"
        android:summary="@string/pref_preferencia2_det"
        android:summaryOn=" preferencia prendida"
        android:summaryOff=" preferencia apagada"
        android:defaultValue="true" />
    <EditTextPreference
        android:key="pref3"
        android:title="Preferencia 3 titulo"
        android:defaultValue=" dato 3"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1"
        />
    <RingtonePreference
        android:key="pref4"
        android:title="Ringtone"
        android:summary="sonido para notificar algo"
        android:ringtoneType="alarm">
    </RingtonePreference>

</PreferenceScreen>